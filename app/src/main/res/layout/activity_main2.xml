<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/bg"
    tools:context=".MainActivity2">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        app:cardBackgroundColor="@color/white"
        android:layout_height="wrap_content"
        android:layout_margin="30sp"
        android:layout_gravity="center"
        app:cardCornerRadius="30sp"
        android:elevation="20sp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:padding="24sp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="User Registration"
                android:layout_marginTop="5sp"
                android:textSize="36sp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="@color/purple"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:id="@+id/fname"
                android:drawableLeft="@drawable/baseline_person_24"
                android:drawablePadding="8sp"
                android:hint="Full Name"
                android:textColorHint="@color/hint"
                android:padding="8sp"
                android:layout_marginTop="20sp"
                android:textColor="@color/black"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:id="@+id/phone"
                android:drawableLeft="@drawable/baseline_phone_24"
                android:drawablePadding="8sp"
                android:hint="Phone No."
                android:textColorHint="@color/hint"
                android:inputType="number"
                android:padding="8sp"
                android:layout_marginTop="20sp"
                android:textColor="@color/black"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:id="@+id/add"
                android:drawableLeft="@drawable/baseline_home_24"
                android:drawablePadding="8sp"
                android:hint="Address"
                android:textColorHint="@color/hint"
                android:padding="8sp"
                android:layout_marginTop="20sp"
                android:textColor="@color/black"/>

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/pet"
                android:layout_marginLeft="15sp"
                android:layout_marginTop="20sp"
                android:orientation="horizontal">

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#2D2929"
                    android:text=""/>
                <ImageView
                    android:layout_width="30sp"
                    android:layout_height="30sp"
                    android:layout_margin="10sp"
                    android:layout_marginLeft="90sp"
                    android:src="@drawable/cat" />

                <View
                    android:layout_width="3sp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="25sp"
                    android:background="@color/line"/>

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#2D2929"
                    android:layout_marginLeft="30sp"
                    android:text=""/>

                <ImageView
                    android:layout_width="30sp"
                    android:layout_height="30sp"
                    android:layout_margin="10sp"
                    android:layout_marginLeft="90sp"
                    android:src="@drawable/dog" />
            </RadioGroup>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:id="@+id/pname"
                android:drawableLeft="@drawable/baseline_pets_24"
                android:drawablePadding="8sp"
                android:hint="Pet Name"
                android:textColorHint="@color/hint"
                android:padding="8sp"
                android:layout_marginTop="10sp"
                android:textColor="@color/black"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:id="@+id/petlic"
                android:drawableLeft="@drawable/baseline_credit_card_24"
                android:drawablePadding="8sp"
                android:hint="Pet Licence"
                android:textColorHint="@color/hint"
                android:padding="8sp"
                android:layout_marginTop="20sp"
                android:textColor="@color/black"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:id="@+id/upass"
                android:drawableLeft="@drawable/baseline_lock_24"
                android:drawablePadding="8sp"
                android:inputType="textPassword"
                android:hint="Password"
                android:textColorHint="@color/hint"
                android:padding="8sp"
                android:layout_marginTop="20sp"
                android:textColor="@color/black"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:id="@+id/conpass"
                android:drawableLeft="@drawable/baseline_lock_24"
                android:drawablePadding="8sp"
                android:inputType="textPassword"
                android:hint="Confirm Password"
                android:textColorHint="@color/hint"
                android:padding="8sp"
                android:layout_marginTop="20sp"
                android:textColor="@color/black"/>

            <Button
                android:layout_width="200sp"
                android:layout_gravity="center"
                android:layout_height="60sp"
                android:text="Register"
                android:id="@+id/register"
                android:textSize="18sp"
                android:layout_marginTop="20sp"
                android:layout_marginBottom="2sp"
                app:cornerRadius="20sp"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</ScrollView>